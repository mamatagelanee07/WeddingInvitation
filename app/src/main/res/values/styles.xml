<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/color_main</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MediumFont">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PinkFont">
        <item name="android:textColor">@color/color_shadow_accent</item>
        <item name="android:fontFamily">@font/pacifico</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LoadingDialog" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogSpotColor">@color/color_shadow_accent</item>
        <item name="DialogSpotCount">5</item>
    </style>

</resources>
